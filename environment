    DSS_DEBUG
    DSS_DEPLOYMENT_STAGE
    DSS_GS_BUCKET
    DSS_GS_CHECKOUT_BUCKET
    DSS_NOTIFICATION_SENDER
    DSS_NOTIFY_DELAYS
    DSS_NOTIFY_TIMEOUT
    DSS_S3_BUCKET
    DSS_S3_CHECKOUT_BUCKET
    DSS_VERSION
    DSS_XRAY_TRACE
    OIDC_AUDIENCE
    OIDC_EMAIL_CLAIM
    OIDC_GROUP_CLAIM
    OPENID_PROVIDER
    TOKENINFO_FUNC
)

set -a
EXPORT_ENV_VARS_TO_LAMBDA=${EXPORT_ENV_VARS_TO_LAMBDA_ARRAY[*]}
